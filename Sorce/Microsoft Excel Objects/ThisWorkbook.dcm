  Call init.setting(True)
  
  Call Check.項目列チェック
  Call menu.M_ショートカット設定
  
  If setVal("debugMode") <> "develop" Then
    helpSheet.Visible = xlSheetVeryHidden
    tmpSheet.Visible = xlSheetVeryHidden
    noticeCodeSheet.Visible = xlSheetVeryHidden
    TeamsPlannerSheet.Visible = xlSheetVeryHidden
    'setSheet.Visible = xlSheetVeryHidden
  End If
  
  mainSheet.Select
  
  
  
