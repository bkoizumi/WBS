<?xml version="1.0" encoding="UTF-8" ?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="ctl_ribbon.onLoad">
  <ribbon startFromScratch="false">
    <tabs>
      <tab id="TestSpecificationTab" label="進捗管理" insertBeforeMso="TabHome">
      <group id="Setting" label="設定">
        <button id="S_B001" size="large" label="Help"                     onAction="ctl_ribbonenu.Help"      getSupertip="getSupertip" getDescription="getDescription" imageMso="Help" />
        <button id="S_B002" size="large" label="オプション&#xD;&#xA;"     onAction="ctl_ribbon.dispOption"   getSupertip="getSupertip" getDescription="getDescription" imageMso="AnimationCustomAddActionVerbDialog" />
        <button id="S_B003" size="large" label="カレンダー生成&#xD;&#xA;" onAction="ctl_ribbon.makeCalendar" getSupertip="getSupertip" getDescription="getDescription" imageMso="CalendarMonthDetailsSplitButton" />
        <splitButton id="S_SB001" size="large">
          <button id="S_B004"            label="View&#xD;&#xA;"           onAction="ctl_ribbon.View"         getSupertip="getSupertip" getDescription="getDescription" imageMso="ImportTextFile" />
          <menu id="S_M100" itemSize="large">
            <button id="S_B005"          label="設定"                     onAction="ctl_ribbon.ViewSetting"  getSupertip="getSupertip" getDescription="getDescription" imageMso="GroupDataFormsTool" />
          </menu>
        </splitButton>
      </group >

      <group id="Common" label="共通">
        <button id="Com_B001" size="large" label="全画面表示"                 onAction="ctl_ribbon.DispFullScreen" getSupertip="getSupertip" getDescription="getDescription" imageMso="ViewFullScreenView" />
        <button id="Com_B002" size="large" label="選択行&#xD;&#xA;ハイライト" onAction="ctl_ribbon.setLineColor" getSupertip="getSupertip" getDescription="getDescription" imageMso="RecordsMoreRecordsMenu" />
        <button id="Com_B003" size="large" label="全削除&#xD;&#xA;"           onAction="ctl_ribbon.ClearAll" getSupertip="getSupertip" getDescription="getDescription" imageMso="ClearAll" />
      </group >

      <group id="Task" label="WBS">
        <button id="T_B001" size="large" label="チェック&#xD;&#xA;"   onAction="ctl_ribbon.chkTaskList" getSupertip="getSupertip" getDescription="getDescription" imageMso="DataValidation" />
        <button id="T_B002" size="large" label="進捗コピー"           onAction="ctl_ribbon.copyProgress" getSupertip="getSupertip" getDescription="getDescription" imageMso="GroupColumnActions" />
        <button id="T_B003" size="large" label="抽出&#xD;&#xA;"       onAction="ctl_ribbon.setFilter" getSupertip="getSupertip" getDescription="getDescription" imageMso="DatasheetColumnLookup" />
        <button id="T_B004" size="large" label="すべて表示&#xD;&#xA;" onAction="ctl_ribbon.dispAllList" getSupertip="getSupertip" getDescription="getDescription" imageMso="FilterClearAllFilters" />
      </group >

      <group id="Chart" label="ガントチャート">
        <button id="C_B001" size="large" label="クリア&#xD;&#xA;"   onAction="ctl_ribbon.clearChart" getSupertip="getSupertip" getDescription="getDescription" imageMso="ClearAll"/>
        <button id="C_B002" size="large" label="センター&#xD;&#xA;" onAction="ctl_ribbon.setCenter" getSupertip="getSupertip" getDescription="getDescription" imageMso="FieldsMenu" />
        <button id="C_B003" size="large" label="生成&#xD;&#xA;"     onAction="ctl_ribbon.makeChart" getSupertip="getSupertip" getDescription="getDescription" imageMso="CalendarViewGallery" />
      </group >

      <group id="Import" label="データ連携">
        <menu id="I_M001" label="インポート&#xD;&#xA;" size="large" itemSize="large"  imageMso="CalendarToolImport" >
          <menuSeparator id="I_S001" title="バイナリ形式のファイルをインポート"/>
          <button id="I_B001" label="Excel" onAction="ctl_ribbon.importExcel"     getSupertip="getSupertip" getDescription="getDescription" imageMso="ImportWorkbook" />
          <menuSeparator id="I_S002" title="テキスト形式のファイルをインポート"/>
          <button id="I_B002" label="CSV" onAction="ctl_ribbon.importCsv" getSupertip="getSupertip" getDescription="getDescription" imageMso="ImportTextFile" />
        </menu>
        <menu id="E_M001" label="エクスポート&#xD;&#xA;" size="large" itemSize="large"  imageMso="CalendarToolExportAllAppointments" >
          <menuSeparator id="E_S001" title="バイナリ形式のファイルをエクスポート"/>
          <button id="E_B001" label="Excel" onAction="ctl_ribbon.importExcel"     getSupertip="getSupertip" getDescription="getDescription" imageMso="ExportExcel" />
          <menuSeparator id="E_S002" title="テキスト形式のファイルをエクスポート"/>
          <button id="E_B002" label="redMine" onAction="ctl_ribbon.importRedMine" getSupertip="getSupertip" getDescription="getDescription" imageMso="ExportTextFile" />
          <button id="E_B003" label="OBPM"    onAction="ctl_ribbon.importOBPM"    getSupertip="getSupertip" getDescription="getDescription" imageMso="ExportTextFile" />
        </menu>
      </group >


      <group id="Group2" label="標準機能">
        <control idMso="PasteValues"               visible="true" label="値貼付" />          <!--値の貼り付け-->
        <menu id="MyMenu01" label="スタイル"  itemSize="normal" imageMso="AppointmentColorDialog" >
          <control idMso="CellStylesGallery"         visible="true" />         <!--セルのスタイル-->
          <control idMso="FormatAsTableGallery"     visible="true" />        <!--テーブルのスタイル-->
        </menu>
        <control idMso="WindowNew"                 visible="true" label="新ウインドウ"/>      <!--新しいウインドウ-->
        <control idMso="WindowsArrangeAll"         visible="true" label="整列"/>              <!--整列-->
        <control idMso="ViewFreezePanesGallery"   visible="true" label="枠固定" />           <!--ウインドウ枠の固定-->
        <control idMso="ViewGridlinesToggleExcel" visible="true" label="枠線表示" />         <!--枠線の表示-->
        <control idMso="TextBoxInsertMenu"         visible="true" label="テキスト" />        <!--テキスト ボックス-->

        <menu id="MyMenu02" label="メニュー"  itemSize="normal" imageMso="BlogHomePage" >
          <control idMso="FileSaveAsOtherFormats" visible="true" label="別名保存" />   <!--他の形式で保存-->
          <control idMso="FilePrintPreview"       visible="true" />                   <!--印刷プレビュー-->
          <control idMso="FileSaveAsPdfOrXps"     visible="true" />                   <!--PDF生成-->
          <control idMso="FileOpen"               visible="true" />                   <!--開く-->
          <control idMso="FilePrepareMenu"        visible="true" />                   <!--配布準備-->
          <control idMso="ClearContents"          visible="true" />                   <!--数式と値のクリア-->
          <control idMso="RefreshAllMenu"         visible="true" />                   <!--すべて更新-->
          <control idMso="DataValidation"         visible="true" />                   <!--入力規則-->
          <control idMso="NameManager"            visible="true" />                   <!--名前の管理-->
        </menu>
    </group>
    <group idMso="GroupFont"                     visible="true"/>                   <!--フォント-->

    </tab>
  </tabs>
  </ribbon>


  <backstage>
    <tab id="tab1" label="進捗管理" visible="true">
      <firstColumn>
        <group id="grp1" label="更新情報" visible="true">
          <topItems>
        <labelControl id="v104-01" label="Ver.1.04　休日をマクロで設定するように変更" />
		<labelControl id="v104-02" label="        　土日祝を色付け、リボンメニュー対応" />
          </topItems>
        </group>
      </firstColumn>

      <secondColumn>
       <group id="grp2" label="参考サイト" visible="true">
          <topItems>
              <hyperlink  id="grp2-201" label="Excelでお仕事!" target="http://www.ne.jp/asahi/excel/inoue/" />
              <hyperlink  id="grp2-202" label="開発マイルストーン" target="http://zudajijp.zouri.jp/km/" />
          </topItems>
        </group>
        <group id="grp3" label="著作権について" visible="true">
          <topItems>
            <labelControl id="grp3-300" label="免責事項" />
